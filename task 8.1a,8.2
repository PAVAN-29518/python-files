        "def uppercase_decorator(func):\n",
        "    def wrapper(text):\n",
        "        return func(text).upper()\n",
        "    return wrapper\n",
        "\n",
        "def lowercase_decorator(func):\n",
        "    def wrapper(text):\n",
        "        return func(text).lower()\n",
        "    return wrapper\n",
        "\n",
        "@uppercase_decorator\n",
        "def shout(text):\n",
